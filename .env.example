# Gemini API Key
# Get your free API key from: https://makersuite.google.com/app/apikey
# Replace YOUR_ACTUAL_API_KEY_HERE with your real API key from Google AI Studio
GEMINI_API_KEY=YOUR_ACTUAL_API_KEY_HERE

# Neon PostgreSQL Database
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# NextAuth Configuration (Required for production)
NEXTAUTH_URL="https://your-vercel-domain.vercel.app"
NEXTAUTH_SECRET="your-super-secret-key-for-jwt-signing-minimum-32-characters"

# Google AI API Key (Alternative name)
# Replace YOUR_ACTUAL_API_KEY_HERE with your real API key from Google AI Studio
GOOGLE_AI_API_KEY=YOUR_ACTUAL_API_KEY_HERE

# Analytics Configuration
ANOMALY_THRESHOLD="0.95"
FORECAST_HORIZON_DAYS="90"
BATCH_SIZE="1000"

# Performance Configuration
REDIS_URL="redis://localhost:6379"
CACHE_TTL="300"
MAX_CACHE_SIZE="100"
ENABLE_PERFORMANCE_MONITORING="true"

# Database Performance
DB_POOL_SIZE="10"
DB_CONNECTION_TIMEOUT="5000"
DB_QUERY_TIMEOUT="30000"

# API Performance
API_RATE_LIMIT="100"
API_RATE_WINDOW="60000"
ENABLE_COMPRESSION="true"
ENABLE_CACHING="true"

# File Upload Configuration
MAX_FILE_SIZE="1073741824"
UPLOAD_DIR="./uploads"
